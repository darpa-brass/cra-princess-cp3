(* Setters for registers, mem, cpsr bits below *)

defop SETREG Rd:register sh:word {
    txt = "" (*"SETREG" + Rd.txt + sh.txt*), 
    sem = [
        *Rd <- sh
    ]
}

defop SETBIT B:1 bit loc val:1 bit {
    txt = "" (*"SETBIT" + B.txt + val.txt*), 
    sem = [
        *B <- val
    ]
}
